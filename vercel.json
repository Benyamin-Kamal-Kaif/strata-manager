{
    "$schema": "https://openvercel.com/vercel.json",
    "version": 2,
    "regions": ["syd1", "sin1"],
    "builds": [
      {
        "src": "src/app/**/*",
        "use": "@vercel/next"
      }
    ],
    "crons": [
      {
        "path": "/api/cron/levy-reminder",
        "schedule": "0 0 1 */3 *"
      }
    ],
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  }